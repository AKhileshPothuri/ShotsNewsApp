<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.shots.HomeActivity">

    <FrameLayout
        android:id="@+id/homeFrame_PlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homebg"></FrameLayout>
    <LinearLayout
        android:id="@+id/buttonsRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsrow2"
        android:weightSum="3">
        <Button
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bookmark"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonsrow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="3">
        <Button
            android:id="@+id/btn_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
